{
  "extends": "./tsconfig",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*.ts*"
  ],
  "exclude": [
    "src/**/*.spec.ts*",
    "src/**/*.test.ts*"
  ]
}
